{
	"compilerOptions": {
		"outDir": "./dist",
		"target": "ES2020",
		"module": "commonjs",
		"removeComments": true,
		"noUnusedLocals": true,
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"allowJs": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"declaration": true
	},
	"include": ["src/*.ts", "src/**/*.ts", "src/*.js", "src/**/*.js"],
	"exclude": ["node_modules", "dist", "tests", "public"]
}
